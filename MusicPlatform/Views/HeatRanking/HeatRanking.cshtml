<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>热歌排行</title>
    <script src="../../Scripts/jquery-3.4.1.js"></script>
    <script src="../../Source/packages/layui/layui.js"></script>
    <script src="../../Scripts/Project/HeatRanking/heatRanking.js"></script>
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
    <link rel="stylesheet" href="../../Source/packages/layuiadmin/style/admin.css" media="all">
</head>
<body>
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md16">
                <div class="layui-card">
                    <div class="layui-card-header">热歌排行——前十</div>
                    <div class="layui-card-body">

                        <blockquote class="layui-elem-quote layui-quote-nm">
                            <!--歌库的表格-->
                            <table id="table_song" lay-filter="table_song"></table>
                        </blockquote>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的状态列-->
    <script type="text/html" id="statusbar">
        {{# if(d.IsRecommend === 0){ }}
        <span style="color: #CDCD00">暂未推荐</span>
        {{#  } }}
        {{# if(d.IsRecommend === 1){ }}
        <span style="color: #EE2C2C">已推荐</span>
        {{#  } }}
    </script>

    <script type="text/html" id="level">
        {{d.LAY_TABLE_INDEX+1}}
    </script>

    <!--layui模版引擎文档(laytpl)-->
    <!--修改表格的工具列-->
    <script type="text/html" id="toolbar">
        <a class="operation" lay-event="play" title="播放">
            <i class="layui-icon layui-icon-headset"></i>播放
        </a>
        <a class="operation" style="margin-left:10px;" lay-event="set-star" title="收藏">
            <i class="layui-icon layui-icon-star"></i>收藏
        </a>
    </script>
</body>
</html>
