<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>歌曲内容</title>
    <script src="../../Source/packages/layui/layui.js"></script>
    <link rel="stylesheet" href="../../Source/packages/css/m-details.css">
    <link rel="stylesheet" href="../../Source/packages/css/font-awesome.min.css">
    <link rel="stylesheet" href="../../Source/packages/layui/css/layui.css">
    <link rel="stylesheet" href="../../Source/packages/layuiadmin/style/admin.css" media="all">
</head>
<body>

    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md12">
                <div class="layui-row layui-col-space15">
                    <div class="layui-col-md7">
                        <div class="layui-card">
                            <div class="layui-card-header">歌曲</div>
                            <div class="layui-card-body">

                                <input type="text" id="song_id" value="@ViewBag.SongId" hidden />
                                <input type="text" id="songPath" hidden />
                                <input type="text" id="wordPath" hidden />
                                <div class="m-content">
                                    <!--播放器-->
                                    <div class="m-player">
                                        <div class="m-player-details">
                                            <div class="m-title"><span id="title"></span></div>
                                            <!--效果html开始-->
                                            <div id="player">
                                                <div class="ctrl">
                                                    <div class="control">
                                                        <div class="left lefticon">
                                                            <div class="playback icon"></div>
                                                        </div>
                                                        <div class="timer">0:00</div>
                                                        <div class="progress">
                                                            <div class="slider">
                                                                <div class="loaded"></div>
                                                                <div class="pace"></div>
                                                            </div>
                                                        </div>

                                                        <div class="volume right">
                                                            <div class="mute icon left"></div>
                                                            <div class="slider left">
                                                                <div class="pace"></div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <!--歌曲详细内容-->
                                            <div class="m-song-details">
                                                <div class="m-singer">歌手：<span id="singer"></span></div>
                                                <div class="m-language">语言：<span id="language"></span></div>
                                                <div class="m-album">风格：<span id="style"></span></div>
                                                <div class="m-time">发布时间：<span id="time"></span></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="layui-col-md5">
                        <div class="layui-card">
                            <div class="layui-card-header">歌词</div>
                            <div class="layui-card-body" style="height:405px;">
                                <iframe id="iframe" src="" frameborder="0" style="width:700px;height:405px;" class="layadmin-iframe"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script src="../../Scripts/Project/SongContent/songForTourist.js"></script>
    <script src="../../Source/packages/js/jquery-1.7.2.min.js"></script>
    <script src="../../Source/packages/js/jquery-ui-1.8.17.custom.min.js"></script>
    <script src="../../Source/packages/js/m-details.js"></script>

</body>
</html>
